@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<DABanDan.Models.LoaiDan>

@{
    ViewBag.Title = "Index";
}
<center>
    <h2>Quản Lí Sản Phẩm</h2>
</center>
<p>
    @Html.ActionLink("Thêm Mới", "CreateLD")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().MaLoai)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.First().TenLoai)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaLoai)
            </td>

            <th>
                @Html.DisplayFor(modelItem => item.TenLoai)
            </th>
            <td>
                @Html.ActionLink("Sửa", "EditLD", new { @IDLD = item.MaLoai }) |
                @Html.ActionLink("Xóa", "DeleteLD", new { @IDLD = item.MaLoai })
            </td>
        </tr>
    }

</table>

Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/ @Model.PageCount
<div class="menu-trang">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
</div>
<style>
    .menu-trang {
        display: inline;
    }
</style>

