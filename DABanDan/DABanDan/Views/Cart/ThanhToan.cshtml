@model List<DABanDan.InputModels.GioHang.GioHang>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="cart-table-area section-padding-100">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 col-lg-8">
                <div class="cart-title mt-50">
                    <center><h2>CART</h2></center>
                </div>

                <div class="cart-table clearfix">
                    <table class="table table-responsive">
                        <thead>
                            <tr>
                                <th>Ảnh Sản Phẩm</th>
                                <th>Tên</th>
                                <th>Đơn Giá</th>
                                <th>Số Lượng</th>

                            </tr>
                        </thead>
                        @if (Model.Count > 0)
                        {
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="cart_product_img">
                                            <a href="#"><img src="@item.SanPham.IMG" alt="Product"></a>
                                        </td>
                                        <td class="cart_product_desc">
                                            <h5>@item.SanPham.TenSP</h5>
                                        </td>
                                        <td class="price">
                                            <span>$ @item.SanPham.DonGia</span>
                                        </td>
                                        <td class="qty">
                                            <div class="qty-btn d-flex">
                                                <a class="txtquantity" data-id="@item.SanPham.MaSP">@item.SoLuong</a>
                                                @*<div class="quantity">
                                                        @*<span class="qty-minus" onclick="var effect = document.getElementById('qty3'); var qty = effect.value; if( !isNaN( qty ) &amp;&amp; qty &gt; 1 ) effect.value--;return false;"><i class="fa fa-minus" aria-hidden="true"></i></span>@
                                                        <input type="number" class="qty-text" id="qty3" step="1" min="1" max="300" name="quantity" value="1">
                                                        <span class="qty-plus" onclick="var effect = document.getElementById('qty3'); var qty = effect.value; if( !isNaN( qty )) effect.value++;return false;"><i class="fa fa-plus" aria-hidden="true"></i></span>
                                                    </div>*@
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        }

                    </table>
                </div>
                <div class="cart-table clearfix">
                    @using (Html.BeginForm("ThanhToan", "Cart", FormMethod.Post))
                    {
                        <div class="form-group">
                            <label>Địa Chỉ</label>
                            <input name="diachi" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label>VAT</label>
                            <input name="vat" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label>Tình Trạng</label>
                            <input name="tinhtrang" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label>Tổng Tiền</label>
                            <input name="tongtien" class="form-control" />
                        </div>
                        <button type="submit" class="btn">Xác Nhận</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
